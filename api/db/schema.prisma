model Task {
  id        Int        @id @default(autoincrement())
  status    TaskStatus
  type      TaskTypes
  data      Json
  createdAt DateTime   @default(now())
}

enum TaskTypes {
  METACRITIC
  TWITTER
}

enum TaskStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
